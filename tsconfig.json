{
    "compilerOptions": {
        "rootDir": "./src/main/resources",
        "module": "commonjs",
        "target": "es5",
        "noImplicitAny": false,
        "sourceMap": false,
        "outDir": "./build/resources/main",
        "noEmitOnError": true,
        "declaration": false
    },
    "exclude": [
        "node_modules",
        "dist"
    ],
    "include": [
        "src/main/resources/**/*.ts",
        "src/main/resources/**/*.d.ts"
    ]
}
